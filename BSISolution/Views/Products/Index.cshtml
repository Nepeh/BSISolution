                    </div>
                </div>
            </div>
        </div>
        <div class="card card-custom gutter-b bg-white border-1">
            <div class="card-body">
                <div>
                    <div class="table-responsive" id="">
                        <table id="ListTable" class="table table-bordered table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th>
                                        No.
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FirstName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MiddleName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.LastName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PhoneNumber)
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <span>@String.Format("{0}.", ++cnt)</span>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FirstName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MiddleName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LastName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                                        </td>
                                        <td class="pull-right">
                                            <div class="dropdown">
                                                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <span class="sr-only">Toggle Dropdown</span>
                                                </button>
                                                <div style="background-color: #ae69f5d9; width: 150px; height:100px;" class="dropdown-menu pull-right" aria-labelledby="dropdownMenuButton">
                                                    <button class="dropdown-item popupItem text-dark" data-url="@Url.Action($"Edit/{item.Id}")" data-toggle="ajax-modal" data-target="#editUserModal">
                                                        <i class="fa fa-user-secret"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Edit User
                                                    </button>
                                                    <button class="dropdown-item popupItem text-dark" data-url="@Url.Action($"EditEmail/{item.Id}")" data-toggle="ajax-modal" data-target="#editUserEmailModal">
                                                        <i class="fa fa-folder-open"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Manage Roles
                                                    </button>
                                                    <button class="dropdown-item popupItem text-dark" data-url="@Url.Action($"DisableUser/{item.Id}")" data-toggle="ajax-modal" data-target="#editUserPasswordModal">
                                                        <i class="fa fa-lock"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Disable User
                                                    </button>
                                                    @*<a class="dropdown-item popupItem text-dark" href="#"><i class="fa fa-cogs"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Roles</a>
                                                        <a class="dropdown-item popupItem text-dark" href="#"><i class="fa fa-remove"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Disable</a>*@
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
