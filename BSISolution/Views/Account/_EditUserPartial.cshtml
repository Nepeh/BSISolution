@model BSISolution.Models.ApplicationUser

<div id="editUserModal" class="modal fade">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editUserCenteredLabel">Edit User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                    <form asp-action="Edit">
                        <div class="col-md-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label class="text-dark" asp-for="FirstName"></label>
                                <input style="width: 340px; height: 40px; font-size: 16px; border-radius: 2px; border-color: #ae69f5d9; border-bottom-width: 3px; border-bottom-style: solid;" asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="text-dark" asp-for="MiddleName"></label>
                                <input style="width: 340px; height: 40px; font-size: 16px; border-radius: 2px; border-color: #ae69f5d9; border-bottom-width: 3px; border-bottom-style: solid;" asp-for="MiddleName" class="form-control" />
                                <span asp-validation-for="MiddleName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="text-dark" asp-for="LastName"></label>
                                <input style="width: 340px; height: 40px; font-size: 16px; border-radius: 2px; border-color: #ae69f5d9; border-bottom-width: 3px; border-bottom-style: solid;" asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="text-dark" asp-for="PhoneNumber"></label>
                                <input style="width: 340px; height: 40px; font-size: 16px; border-radius: 2px; border-color: #ae69f5d9; border-bottom-width: 3px; border-bottom-style: solid;" asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="text-dark" asp-for="Email"></label>
                                <input style="width: 340px; height: 40px; font-size: 16px; border-radius: 2px; border-color: #ae69f5d9; border-bottom-width: 3px; border-bottom-style: solid;" asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div class="form-group pull-right">
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                            </div>
                            <div class="form-group pull-right">
                                @*<button class="btn btn-primary" type="submit">Edit User!</button>*@
                                <input type="submit" value="Edit User" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</div>

